# Service Configuration
SERVICE_NAME=payment-service
PORT=3006                    # HTTP server port
GRPC_PORT=50055              # gRPC server port
LOG_LEVEL=info               # debug, info, warn, error

# Database Configuration (PostgreSQL)
# Option 1: Use DATABASE_URL (recommended)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/payment_db?sslmode=disable

# Option 2: Use individual variables
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=payment_db
DB_SSL_MODE=disable

# Redis Configuration (Optional - for caching)
# Option 1: Use REDIS_URL (recommended)
REDIS_URL=redis://localhost:6379/0

# Option 2: Use individual variables
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# Stripe Configuration (Required for payment processing)
# Get your test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Webhooks (Optional - for async payment updates)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Service Discovery (Optional - for inter-service communication)
ORDER_SERVICE_GRPC=localhost:50054
EVENT_SERVICE_GRPC=localhost:50056
